<div class="row justify-content-center my-5">

  <div class="card text-center font-weight-bold p-5 shadow" style="width: 30rem;">
    <div class="card-body">


<h2 class="card-title pb-5">Edit the City: {{city.name}}</h2>
<form class="card-text" action="/cities/{{city._id}}/edit" method="POST" enctype="multipart/form-data">
 <div class="form-group">
  <label> Name: <br>
    <input class="border-info" type="text" name="name" value="{{city.name}}" required/>
  </label>
  </div>
  <div class="form-group">
  <label> Country: <br>
    <input class="border-info" type="text" name="country" value="{{city.country}}" required/>
  </label>
  </div>
  <div class="form-group py-3">
  <label> Description: <br>
    <textarea class="border-info" name="description" cols="35" rows="6" placeholder="description of city">{{city.description}}</textarea>
  </label>
  </div>
  <div class="form-group">
  <label> Image:
    <input class="btn btn-outline-info" type="file" name="cityImage"/>
  </label>
  </div>
  <div class="form-group">
  <button class="btn-lg btn-info">Save changes</button>
  </div>
</form>
{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}
