<div class="row justify-content-center my-5">

  <div class="card text-center font-weight-bold p-5 shadow" style="width: 30rem;">
    <div class="card-body">


<h2 class="card-title pb-5">Edit the City: {{name}}</h2>
<form class="card-text" action="/cities/{{_id}}/edit" method="POST" enctype="multipart/form-data">
 <div class="form-group">
  <label> Name:
    <input type="text" name="name" value="{{name}}" required/>
  </label>
  </div>
  <div class="form-group">
  <label> Country:
    <input type="text" name="country" value="{{country}}" required/>
  </label>
  </div>
  <div class="form-group">
  <label> Description:
    <textarea name="description" cols="30" rows="4">
        {{description}}
    </textarea>
  </label>
  </div>
  <div class="form-group">
  <label> Image:
    <input class="btn btn-outline-info" type="file" name="cityImage"/>
  </label>
  </div>
  <div class="form-group">
  <button class="btn-lg btn-info">Save changes</button>
  </div>
</form>
