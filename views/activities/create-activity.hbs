<div class="row justify-content-center my-5">
<div class="card text-center font-weight-bold p-5 shadow" style="width: 30rem;">
<div class="card-body">

<h2 class="card-title pb-5">Add Activity to {{name}}</h2>

<form class="card-text" action="/cities/{{_id}}/activities/create" method="POST">
    <div class="form-group">
    <label>Name: <br>
        <input class="border-info" type="text" name="name" required>
    </label>
    </div>

    <div class="form-group p-3">
    <label> Description: <br>
        <textarea class="border border-info" name="description" cols="30" rows="4"></textarea>
    </label>
    </div>

    <div class="form-group">
    <label>Location: <br>
        <input class="border-info" type="text" name="location">
    </label>
    </div>

<div class="form-group">
    <input type="hidden" name="city" value="{{_id}}">
   </div>

   <div class="form-group">
    <button class="btn-lg btn-info" type="submit"> Submit </button>
   </div>

</form>
</div>
  </div>
</div>



      
        
