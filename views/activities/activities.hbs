<h2 class="text-center m-5">Activities in {{city.name}}</h2>
<div class="container hero">
  <div class="row justify-content-center pt-4">

{{#unless activities}}
  <h3>No activities yet. Help us find fun activities in {{city.name}}.</h3>
{{/unless}}

    {{#each activities}}

      <div class="card m-3 col-xs-10 col-sm-8 shadow-lg p-3 mb-5 bg-white rounded " style="width: 30rem;">
        <div class="card-body">
          <h3 class="card-title">{{name}}</h3>
          <hr />
        </div>
        <div class="card-text px-4">
          <p>{{description}}</p>
          <hr />
          <p class="font-weight-bold">{{location}}</p>
          <hr />

        </div>

        <div class="card-body text-center">
          <a
            class="card-link btn btn-outline-primary m-1"
            href="/cities/{{city._id}}/activities/{{_id}}/edit"
          >Edit</a>
          <form
            action="/cities/{{city._id}}/activities/{{_id}}/delete"
            method="POST"
          >
            <button class="card-link btn btn-outline-secondary m-1">Delete</button>
          </form>

        </div>
      </div>
    {{/each}}
  </div>
  <div class="row justify-content-center">
    <a
      class="card-link btn-lg btn-info mt-3 mb-5"
      href="/cities/{{city._id}}/activities/create"
    >Add new activity</a>
  </div>
</div>